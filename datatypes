- name: check a number is less than 100 or not
  hosts: local
  connection: local
  vars_prompt:
  - name: john_number
    prompt: please enter the john_number
    private: false  # not confidential
  tasks:
  - name: print this less than 100
    ansible.builtin.debug:
      msg: "given john_number {{ john_number }} is less than 100"
    when: john_number < 100  # condition expresssion

  - name: print this if grater than or equal to 100
    ansible.builtin.debug:
      msg: "given number {{ john_number }} greater than or equal to 100"
    when: john_number >=100